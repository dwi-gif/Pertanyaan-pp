<body>
    <div class="login-container">
        <h2>Login Admin Modem Orbit</h2>
        <form id="loginForm">
            <input type="text" id="username" placeholder="Username" required>
            <input type="password" id="password" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>
    </div>

    <div class="actions-container" id="actionsContainer">
        <button onclick="lockBand()">Lock Band</button>
        <button onclick="enableData()">Enable Data</button>
    </div>

    <script>
        // Simulasi fungsi login (contoh untuk demo, ganti dengan implementasi server-side yang aman)
        document.getElementById('loginForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Hindari pengiriman formulir

            var username = document.getElementById('username').value;
            var password = document.getElementById('password').value;

            // Kirim permintaan ke server untuk validasi login
            try {
                const response = await fetch('https://your-backend-url/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    // Login berhasil
                    document.getElementById('actionsContainer').style.display = 'block'; // Tampilkan menu aksi setelah login
                } else {
                    // Login gagal
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Terjadi kesalahan saat login. Silakan coba lagi.');
            }
        });

        // Contoh fungsi untuk mengirim perintah ke modem Orbit (gunakan metode yang sesuai)
        function sendCommandToModem(command) {
            // Kirim permintaan ke server backend yang akan meneruskan ke modem
            fetch('https://your-backend-url/modem/command', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ command })
            })
            .then(response => {
                if (response.ok) {
                    alert('Perintah berhasil dikirim ke modem.');
                } else {
                    throw new Error('Gagal mengirim perintah ke modem.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Terjadi kesalahan saat mengirim perintah ke modem.');
            });
        }

        // Fungsi untuk mengunci band
        function lockBand() {
            sendCommandToModem('lock_band');
        }

        // Fungsi untuk mengaktifkan data
        function enableData() {
            sendCommandToModem('enable_data');
        }
    </script>
</body>
</html>